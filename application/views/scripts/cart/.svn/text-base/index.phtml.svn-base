<script type="text/javascript">

function updateQuantity(cartID,quantity){
	$.post("/cart/update", { cartID: cartID, quantity: quantity },
			   function(data){
			     if(data){
				     alert("Change of quantity unsuccesful");
			     }else{
			    	 location.reload(); 
			     }
			   });	
}
</script>

